<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#242424"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaylistActivity">

    <!--Toolbar at the top (Optional, prolly remove)-->

    <FrameLayout
        android:id="@+id/toolbar_container"
        android:fitsSystemWindows="true"
        android:background="@drawable/background_gradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@android:color/transparent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">


        </androidx.appcompat.widget.Toolbar>

    </FrameLayout>

    <!--The crazy shit-->

    <edmt.dev.advancednestedscrollview.AdvancedNestedScrollView
        android:id="@+id/nested_scroll_view"
        app:layout_behavior="com.example.slice.behavior.CustomBehavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/card_container"
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <!--            android:layout_marginLeft="24dp"-->
        <!--            android:layout_marginRight="24dp"-->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                app:cardCornerRadius="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#242424"
                    >

                    <TextView
                        android:id="@+id/card_title"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingBottom="4dp"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:paddingTop="16dp"
                        android:text="Christmas"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/card_sub_title"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingBottom="8dp"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:paddingTop="16dp"
                        android:text="Best 5 Christmas tree around the world"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <edmt.dev.advancednestedscrollview.MaxHeightRecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/card_recycler_view">

                        </edmt.dev.advancednestedscrollview.MaxHeightRecyclerView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:id="@+id/card_header_shadow"
                            android:alpha="0"
                            android:background="@drawable/toolbar_shadow">

                        </View>
                    </FrameLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_gravity="top|end"
                android:layout_marginRight="24dp"
                app:srcCompat="@drawable/ic_share_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
    </edmt.dev.advancednestedscrollview.AdvancedNestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>